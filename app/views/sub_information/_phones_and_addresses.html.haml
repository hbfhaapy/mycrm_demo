#phones
  = f.fields_for :phones do |f|
    .row.clearfix
      .col-md-4.column.form-group
        = f.association :klass, label: false, input_html: { class: "form-control" }
      .col-md-6.column.form-group
        = f.input :number, label: false, placeholder: "电话...", input_html: { class: "form-control" }
      .col-md-2.column.form-group
        = f.link_to_remove "删除", class: "btn btn-danger"
    = f.hidden_field :phoneable_id, value: object.id
    = f.hidden_field :phoneable_type, value: object.class.to_s
= f.link_to_add "新增电话", :phones, :data => { :target => "#phones" }, class: "btn btn-primary btn-xs mb1"
#addresses
  = f.fields_for :addresses do |f|
    .row.clearfix
      .col-md-10.column.form-group
        = f.input :content, label: false, placeholder: "地址...", input_html: { class: "form-control" }
      .col-md-2.column.form-group
        = f.link_to_remove "删除", class: "btn btn-danger"
    = f.hidden_field :addressable_id, value: object.id
    = f.hidden_field :addressable_type, value: object.class.to_s
= f.link_to_add "新增地址", :addresses, :data => { :target => "#addresses" }, class: "btn btn-primary btn-xs mb1"