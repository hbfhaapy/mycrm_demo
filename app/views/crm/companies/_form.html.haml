= form_for @crm_company do |f|
  - if @crm_company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@crm_company.errors.count, "error")} prohibited this crm_company from being saved:"
      %ul
        - @crm_company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :zipcode
    = f.number_field :zipcode
  .field
    = f.label :mail
    = f.text_field :mail
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
