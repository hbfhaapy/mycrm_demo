= form_for @crm_address do |f|
  - if @crm_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@crm_address.errors.count, "error")} prohibited this crm_address from being saved:"
      %ul
        - @crm_address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :addressable_id
    = f.number_field :addressable_id
  .field
    = f.label :addressable_type
    = f.text_field :addressable_type
  .actions
    = f.submit 'Save'
