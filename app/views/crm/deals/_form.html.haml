= form_for @crm_deal do |f|
  - if @crm_deal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@crm_deal.errors.count, "error")} prohibited this crm_deal from being saved:"
      %ul
        - @crm_deal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :status_id
    = f.number_field :status_id
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :company_id
    = f.number_field :company_id
  .field
    = f.label :contact_id
    = f.number_field :contact_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :time
    = f.datetime_select :time
  .actions
    = f.submit 'Save'
