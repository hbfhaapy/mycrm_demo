= form_for @crm_phone do |f|
  - if @crm_phone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@crm_phone.errors.count, "error")} prohibited this crm_phone from being saved:"
      %ul
        - @crm_phone.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :klass_id
    = f.number_field :klass_id
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :phoneable_id
    = f.number_field :phoneable_id
  .field
    = f.label :phoneable_type
    = f.text_field :phoneable_type
  .actions
    = f.submit 'Save'
