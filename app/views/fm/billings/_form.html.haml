= form_for @fm_billing do |f|
  - if @fm_billing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fm_billing.errors.count, "error")} prohibited this fm_billing from being saved:"
      %ul
        - @fm_billing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :time
    = f.datetime_select :time
  .field
    = f.label :manager_id
    = f.number_field :manager_id
  .field
    = f.label :company_id
    = f.number_field :company_id
  .field
    = f.label :collection_id
    = f.number_field :collection_id
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
