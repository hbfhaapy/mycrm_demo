<div class="container">
  <h1 class="form-signin-heading">Sign in</h1>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "form-signin") do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email, {autofocus: true, class: "form-control"} %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.check_box :remember_me, class: "checkbox" %><%= f.label :remember_me %>

    <%= f.submit "Sign in", class: "btn btn-large btn-primary btn-block" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
